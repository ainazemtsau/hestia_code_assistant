{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "csk.registry.schema.json",
  "type": "object",
  "required": [
    "version",
    "modules"
  ],
  "properties": {
    "version": {
      "type": "integer"
    },
    "modules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "name",
          "root_path"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "root_path": {
            "type": "string"
          },
          "keywords": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": false
      }
    },
    "root_module_id": {
      "type": [
        "string",
        "null"
      ]
    }
  },
  "additionalProperties": false
}