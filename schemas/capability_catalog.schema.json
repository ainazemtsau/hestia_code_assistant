{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CSK capability catalog",
  "type": "object",
  "required": [
    "schema_version",
    "entries"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "entries": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "kind",
          "source",
          "risk_score"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "kind": {
            "type": "string",
            "enum": [
              "mcp",
              "skill"
            ]
          },
          "description": {
            "type": "string"
          },
          "source": {
            "type": "string"
          },
          "url": {
            "type": "string"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "risk_score": {
            "type": "number"
          },
          "install_steps": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "verify_steps": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
