{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CSK initiative plan",
  "type": "object",
  "required": [
    "schema_version",
    "initiative_id",
    "title",
    "goal",
    "status",
    "created_utc",
    "milestones"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "enum": [1]
    },
    "initiative_id": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "goal": {
      "type": "string"
    },
    "owner": {
      "type": "string"
    },
    "created_utc": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "approved", "active", "done", "blocked"]
    },
    "default_profile": {
      "type": "string"
    },
    "workflow_profile": {
      "type": "string"
    },
    "milestones": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "milestone_id",
          "title",
          "status",
          "module_items"
        ],
        "properties": {
          "milestone_id": {
            "type": "string",
            "pattern": "^M-\\d+$"
          },
          "title": {
            "type": "string"
          },
          "goal": {
            "type": "string"
          },
          "acceptance": {
            "type": "string"
          },
          "estimated_effort": {
            "type": "integer",
            "minimum": 0
          },
          "depends_on": {
            "type": "array",
            "items": { "type": "string" }
          },
          "status": {
            "type": "string",
            "enum": ["planned", "active", "done", "blocked", "skipped"]
          },
          "module_items": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "module_id",
                "role",
                "participation"
              ],
              "properties": {
                "module_id": {
                  "type": "string"
                },
                "role": {
                  "type": "string",
                  "enum": ["owner", "consumer", "shared", "support", "not_applicable"]
                },
                "participation": {
                  "type": "string",
                  "enum": ["active", "not_applicable"]
                },
                "module_task_ids": {
                  "type": "array",
                  "items": { "type": "string" }
                },
                "reason_if_not_applicable": {
                  "type": "string"
                }
              },
              "additionalProperties": true
            }
          }
        },
        "additionalProperties": true
      }
    },
    "evidence": {
      "type": "object",
      "additionalProperties": true
    },
    "reason_if_not_applicable": {
      "type": "string"
    }
  },
  "additionalProperties": true
}
