{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CSK user check proof",
  "type": "object",
  "required": [
    "task_id",
    "module",
    "checked_utc",
    "checked_by",
    "result",
    "notes",
    "user_acceptance_sha256"
  ],
  "properties": {
    "task_id": {
      "type": "string"
    },
    "module": {
      "type": "string"
    },
    "checked_utc": {
      "type": "string"
    },
    "checked_by": {
      "type": "string"
    },
    "result": {
      "type": "string",
      "enum": ["pass", "fail"]
    },
    "notes": {
      "type": "string"
    },
    "checks": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "evidence": {
      "type": "string"
    },
    "user_acceptance_sha256": {
      "type": "string"
    }
  },
  "additionalProperties": true
}
