{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CSK phase profiles",
  "type": "object",
  "required": [
    "schema_version",
    "default_phase_profile",
    "profiles"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "default_phase_profile": {
      "type": "string"
    },
    "profiles": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": [
          "phases"
        ],
        "properties": {
          "phases": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "stack_overrides": {
      "type": "object"
    },
    "risk_overrides": {
      "type": "object"
    }
  }
}
