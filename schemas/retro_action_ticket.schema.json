{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CSK retro action ticket",
  "type": "object",
  "required": [
    "schema_version",
    "id",
    "type",
    "target",
    "blocking",
    "status",
    "reason"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "id": {
      "type": "string",
      "pattern": "^ACT-[0-9]{3}$"
    },
    "type": {
      "type": "string",
      "enum": [
        "mcp_install",
        "mcp_remove",
        "skill_download",
        "skill_create",
        "skill_remove"
      ]
    },
    "target": {
      "type": "string"
    },
    "blocking": {
      "type": "boolean"
    },
    "status": {
      "type": "string",
      "enum": [
        "open",
        "completed",
        "waived",
        "blocked"
      ]
    },
    "reason": {
      "type": "string"
    },
    "risk_score": {
      "type": "number"
    },
    "source_urls": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "install_steps": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "verify_steps": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
