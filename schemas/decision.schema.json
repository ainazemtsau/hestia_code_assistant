{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CSK decision",
  "type": "object",
  "required": [
    "ts",
    "scope",
    "decision",
    "recommended"
  ],
  "properties": {
    "ts": {
      "type": "string"
    },
    "scope": {
      "type": "string",
      "enum": [
        "app",
        "module"
      ]
    },
    "module": {
      "type": [
        "string",
        "null"
      ]
    },
    "decision": {
      "type": "string"
    },
    "options": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "recommended": {
      "type": "string"
    },
    "rationale": {
      "type": "string"
    },
    "evidence": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}