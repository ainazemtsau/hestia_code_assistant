{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CSK toolchain",
  "type": "object",
  "required": [
    "schema_version",
    "profile",
    "gates"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "enum": [
        1
      ]
    },
    "profile": {
      "type": "string"
    },
    "risk": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high"
      ]
    },
    "gates": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": [
          "required",
          "cmd"
        ],
        "properties": {
          "required": {
            "type": "boolean"
          },
          "cmd": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "timeout_sec": {
            "type": "integer"
          }
        }
      }
    },
    "evidence": {
      "type": "object",
      "properties": {
        "files": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "probes": {
          "type": "object"
        }
      }
    },
    "notes": {
      "type": "string"
    }
  }
}