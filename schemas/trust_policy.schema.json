{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CSK capability trust policy",
  "type": "object",
  "required": [
    "schema_version",
    "allowed_sources",
    "max_risk_score"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "allowed_sources": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "max_risk_score": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "notes": {
      "type": "string"
    }
  }
}
