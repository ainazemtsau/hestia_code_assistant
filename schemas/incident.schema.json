{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CSK incident",
  "type": "object",
  "required": [
    "ts",
    "stage",
    "severity",
    "type",
    "summary",
    "status"
  ],
  "properties": {
    "ts": {
      "type": "string"
    },
    "module": {
      "type": [
        "string",
        "null"
      ]
    },
    "stage": {
      "type": "string"
    },
    "severity": {
      "type": "string",
      "enum": [
        "P0",
        "P1",
        "P2",
        "P3"
      ]
    },
    "type": {
      "type": "string"
    },
    "summary": {
      "type": "string"
    },
    "evidence": {
      "type": "object"
    },
    "proposed_fix": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "status": {
      "type": "string",
      "enum": [
        "open",
        "fixed",
        "wontfix"
      ]
    }
  }
}