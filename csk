#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR="$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" && pwd)"
WORK_ROOT="$(pwd -P)"
STATE_ROOT="${CSK_STATE_ROOT:-${WORK_ROOT}}"

export PYTHONPATH="${SCRIPT_DIR}/engine/python${PYTHONPATH:+:${PYTHONPATH}}"
exec python -m csk_next.cli.main --root "${WORK_ROOT}" --state-root "${STATE_ROOT}" "$@"
